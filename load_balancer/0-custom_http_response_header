#!/usr/bin/env bash
# This script configures a new Ubuntu server with Nginx.
# It overwrites the default config with a complete, correct configuration.

# --- 1. Installation ---
sudo apt-get update -y
sudo apt-get install nginx -y

# --- 2. Create Content Files ---
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# --- 3. Define the *Entire* Nginx Config ---
# We create the full config in a variable.
CONFIG_CONTENT="server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    # Custom Header (Task 0)
    add_header X-Served-By \$hostname;

    # Redirect (Task 3)
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Custom 404 (Task 4)
    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
        internal;
    }

    location / {
        try_files \$uri \$uri/ =404;
    }
}
"

# --- 4. Overwrite the Old File ---
# This command writes our new config, completely replacing the broken file.
echo "$CONFIG_CONTENT" | sudo tee /etc/nginx/sites-available/default

# --- 5. Restart Nginx ---
sudo service nginx restart
