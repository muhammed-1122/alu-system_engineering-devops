#!/usr/bin/env bash
# This script configures a new Ubuntu server with Nginx.
# It OVERWRITES the default config with a complete, correct configuration.

# --- 1. Installation ---
sudo apt-get update -y
sudo apt-get install nginx -y

# --- 2. Create Content Files ---
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# --- 3. Overwrite the Old File ---
# This 'tee << EOF' command writes a complete, new config file,
# replacing the old broken one. This is the safest way.
# We use 'EOF' (with quotes) so $hostname and $uri are written
# literally, for Nginx to interpret.
sudo tee /etc/nginx/sites-available/default > /dev/null << 'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    # Custom Header (Task 0)
    add_header X-Served-By $hostname;

    # Redirect (Task 3)
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }

    # Custom 404 (Task 4)
    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
        internal;
    }

    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

# --- 4. Test and Restart Nginx ---
# Test the new config file first
sudo nginx -t

# If the test is successful, restart the service
if [ $? -eq 0 ]; then
    echo "Nginx config is OK. Restarting Nginx..."
    sudo service nginx restart
else
    echo "Nginx config test failed! Not restarting."
fi
