#!/usr/bin/env bash
# Installs Nginx, configures redirect, and sets a custom 404 page

# --- Installation (from Task 1) ---
sudo apt-get update -y
sudo apt-get install nginx -y
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html

# --- Create Custom 404 Page ---
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# --- Configuration for 301 Redirect (from Task 3) ---
REDIRECT_CONFIG="\\\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}"
sudo sed -i "/server_name _;/a $REDIRECT_CONFIG" /etc/nginx/sites-available/default

# --- Configuration for 404 Page ---
# Insert the error_page config
# This 'sed' command adds the 404 config after the 'index index.html...' line
ERROR_CONFIG="\\\n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}"
sudo sed -i "/index index.html index.htm;/a $ERROR_CONFIG" /etc/nginx/sites-available/default

# Restart nginx
sudo service nginx restart
