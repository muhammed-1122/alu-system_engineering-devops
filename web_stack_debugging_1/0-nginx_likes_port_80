#!/usr/bin/env bash
# Ensures Nginx is running and listening on port 80 (IPv4).

# Uncomment the IPv4 'listen 80 default_server;' directive in the default config.
sed -i 's/^#\s*listen 80 default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default

# Restart the Nginx service to load the new configuration.
service nginx restart
